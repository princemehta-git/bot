# Must match the bot_id column in bot_config for this bot's rows
BOT_USERNAME=your_bot_username

# MySQL database (user details, balance, gifts, bot config)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=ichancy_bot

# All bot configuration (token, channel, limits, credentials, etc.)
