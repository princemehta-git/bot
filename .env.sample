# Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Channel username (with @) that users must follow, e.g. @ichancy_official
# Or use channel ID as number, e.g. -1001234567890
CHANNEL_USERNAME=@your_channel

# Debug mode: when on, /start shows "Create account" menu so you can test registration again and again. When off (production), /start shows full menu with user options.
DEBUG_MODE=false

# Cloudflare bypass API (must be running; default port 8000)
BYPASS_API_URL=http://localhost:8000

# Probe: how many URLs to ping in parallel per batch. Default 5.
BYPASS_BATCH_SIZE=2

# Cron: ping each bypass URL once for agents.ichancy.com every N minutes (0 = disabled). Default 25.
BYPASS_PING_INTERVAL_MIN=5

# Probe: max seconds to wait per batch for first success. Default 5.
BYPASS_PROBE_TIMEOUT_SEC=5

# Probe: max batches to try (optional). Empty = try all batches.
# BYPASS_BATCH_ITERATIONS=2

# When using chosen server or fresh bypass: max seconds per server before trying next. Default 20.
BYPASS_TIMEOUT_SEC=600

# Ichancy agents.ichancy.com â€“ used to create players when user clicks "Create account"
ICHANCY_AGENT_USERNAME=your_agent_username@agent.nsp
ICHANCY_AGENT_PASSWORD=your_agent_password
ICHANCY_PARENT_ID=your_parent_id

# Golden Tree game link (main menu button)
GOLDEN_TREE_URL=https://www.ichancy.com/slots/all/36/pascal-gaming/77612-500008078-golden-tree:-buy-bonus?mode=real

# Ichancy website (for "Go to Ichancy" button in account view)
ICHANCY_SITE_URL=https://ichancy.com/

# Bot display name (e.g. "Raphael Bot" in account message)
BOT_DISPLAY_NAME=Raphael Bot

# Wheel eligibility (bot-level): deposit in LS and active referrals required within 24h to activate daily spin
DEPOSIT_REQUIRED_LS=50000
ACTIVE_REFERRALS_REQUIRED=5

# MySQL database (user details, balance, gifts)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=ichancy_bot

# Optional: domain for synthetic player email (default: ichancy.bot)
# BOT_EMAIL_DOMAIN=ichancy.bot
